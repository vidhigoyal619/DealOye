                  <script>
                   document.addEventListener("DOMContentLoaded", function() {
                    const categorySelect = document.getElementById("category");
                    const products = document.querySelectorAll(".product");
                    const errorMessage = document.getElementById("error-message");
                  
                    categorySelect.addEventListener("change", function() {
                      const selectedCategory = categorySelect.value;
                      let productsFound = false;
                  
                      products.forEach(function(product) {
                        const productCategory = product.getAttribute("data-category");
                  
                        if (selectedCategory === "all" || selectedCategory === productCategory) {
                          product.style.display = "block";
                          productsFound = true;
                        } else {
                          product.style.display = "none";
                        }
                      });
                  
                      if (!productsFound) {
                        errorMessage.style.display = "block";
                      } else {
                        errorMessage.style.display = "none";
                      }
                    });
                  });
                  
                  
                    //  code for search bar
                  document.addEventListener("DOMContentLoaded", function() {
                      const categorySelect = document.getElementById("category");
                      const products = document.querySelectorAll(".product");
                      const searchForm = document.getElementById("search-form");
                      const searchTermInput = document.getElementById("search-term");
                      const searchResults = document.querySelector(".search-results");
                      const errorElement = document.createElement("p");
                      errorElement.className = "error";
                      errorElement.textContent = "No Search Results Found. Try Search from Category.";
                  
                      categorySelect.addEventListener("change", filterProducts);
                  
                      searchForm.addEventListener("submit", function(e) {
                          e.preventDefault();
                          const selectedCategory = categorySelect.value;
                          const searchTerm = searchTermInput.value.trim().toLowerCase();
                  
                          if (selectedCategory === "all") {
                              products.forEach(function(product) {
                                  const productTitle = product.querySelector("h3").textContent.toLowerCase();
                                  if (productTitle.includes(searchTerm)) {
                                      product.style.display = "block";
                                  } else {
                                      product.style.display = "none";
                                  }
                              });
                          } else {
                              products.forEach(function(product) {
                                  const productCategory = product.getAttribute("data-category");
                                  const productTitle = product.querySelector("h3").textContent.toLowerCase();
                                  if (productCategory === selectedCategory && productTitle.includes(searchTerm)) {
                                      product.style.display = "block";
                                  } else {
                                      product.style.display = "none";
                                  }
                              });
                          }
                  
                          if (document.querySelectorAll(".product[style='display: block;']").length === 0) {
                              searchResults.textContent = "";
                              searchResults.appendChild(errorElement);
                          } else {
                              searchResults.textContent = "";
                          }
                      });
                  
                      function filterProducts() {
                          const selectedCategory = categorySelect.value;
                  
                          products.forEach(function(product) {
                              const productCategory = product.getAttribute("data-category");
                              if (selectedCategory === "all" || selectedCategory === productCategory) {
                                  product.style.display = "block";
                              } else {
                                  product.style.display = "none";
                              }
                          });
                  
                          searchTermInput.value = ""; // Clear search input when changing categories
                          searchResults.textContent = ""; // Clear any previous error message
                      }
                  });
                  
                  
                  // js code for hamburger menu
                  const menuToggle = document.querySelector('.menu-toggle');
                  const navLinks = document.querySelector('.nav-links');
                  
                  menuToggle.addEventListener('click', () => {
                      navLinks.classList.toggle('active');
                  });
                  
                  //  code for sellerdetails button
                  const sellerDetailButtons = document.querySelectorAll('.seller-details-button');
                  sellerDetailButtons.forEach((button) => {
                      button.addEventListener('click', (event) => {
                          event.preventDefault();
                          const productId = button.getAttribute('data-product-id');
                          window.location.href = `sellerDetails.html?product=${productId}`;
                      });
                  });
                  
                  document.addEventListener("DOMContentLoaded", function() {
                      // Initialize the cart when the page loads
                      const cart = JSON.parse(localStorage.getItem("cart")) || [];
                      const cartItemsElement = document.getElementById("cart-items");
                      const totalPriceElement = document.getElementById("total-price");
                  
                      // Function to calculate and update the total price
                      function updateTotalPrice() {
                          const total = cart.reduce((sum, item) => sum + item.price, 0);
                          totalPriceElement.textContent = total;
                      }
                  
                      // Function to display cart items
                      function renderCart() {
                          cartItemsElement.innerHTML = ''; // Clear the cart items
                  
                          if (cart.length === 0) {
                              cartItemsElement.innerHTML = 'Cart is empty.';
                          } else {
                              cart.forEach(item => {
                                  const productElement = document.createElement("div");
                                  productElement.innerHTML = `
                                      <img src="${item.image}" alt="${item.name}" width="50">
                                      <span>${item.name}</span>
                                      <span>$${item.price}</span>
                                  `;
                                  cartItemsElement.appendChild(productElement);
                              });
                          }
                  
                          updateTotalPrice();
                      }
                  
                      renderCart(); // Initial rendering
                  
                      // Handle adding a product to the cart
                      const addToCartButtons = document.querySelectorAll(".add-to-cart-button");
                  
                      addToCartButtons.forEach(button => {
                          button.addEventListener("click", function() {
                              const productName = this.getAttribute("data-name");
                              const productImage = this.getAttribute("data-image");
                              const productPrice = parseFloat(this.getAttribute("data-price"));
                  
                              // Add the selected product to the cart
                              cart.push({ name: productName, image: productImage, price: productPrice });
                  
                              // Save the updated cart to local storage
                              localStorage.setItem("cart", JSON.stringify(cart));
                  
                              renderCart(); // Update the cart display
                          });
                      });
                  });
                  
